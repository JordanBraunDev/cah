{% extends 'base.html.twig' %}

{% block title %}Page de profil{% endblock %}

{% block body %}

<div class="container max-w-full mx-auto md:py-24 px-6">
  <div class="max-w-sm mx-auto px-6">
        <div class="relative flex flex-wrap">
            <div class="w-full relative">
                <div class="md:mt-6">
                <div class="text-center font-semibold text-black">
                        {{ app.user.prenom }} {{ app.user.nom }}
                         <h2>Equipe {{ app.user.equipe }}</h2>
                    </div>

                        {{ form_start(form, {
                            'attr': {'class': "mt-8"}
                        }) }}
                        <div class="mx-auto max-w-lg flex flex-col">
                        <img class="object-scale-down rounded-full inline-block h-16 w-16 mx-auto" src="{{ app.user.profilImage != null ? asset("uploads/user_image/") ~ app.user.profilImage : asset("assets/images/avatar.jpg") }}" alt="Avatar">
                        <div class="py-1">
                            {{ form_label(form.nom, null, {
                                'label': 'Nom'  
                            })  
                            }}
                            {{ form_widget(form.nom, {
                                'attr': {'class': 'text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-grey shadow-md focus:bg-white focus:border-grey focus:outline-none'}    
                            })   
                            }}
                        </div>
                        <div class="py-1">
                            {{ form_label(form.prenom, null, {
                                'label': 'Pr√©nom'  
                            })  
                            }}
                            {{ form_widget(form.prenom, {
                                'attr': {'class': 'text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-grey shadow-md focus:bg-white focus:border-grey focus:outline-none'}    
                            })   
                            }}
                        </div>
                        <div class="py-1">
                            {{ form_label(form.description, null, {
                                'label': 'Ma description'  
                            })  
                            }}
                            {{ form_widget(form.description, {
                                'attr': {'class': 'text-area-resize text-md px-3 py-2 rounded-lg w-full  h-40 bg-white border-2 border-grey shadow-md focus:bg-white focus:border-grey focus:outline-none'}    
                            })   
                            }}
                        </div>
                        <div class="py-1">
                            {{ form_label(form.email, null, {
                                'label': 'Email'  
                            })  
                            }}
                            {{ form_widget(form.email, {
                                'attr': {'class': 'text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-grey shadow-md focus:bg-white focus:border-grey focus:outline-none'}    
                            })   
                            }}
                        </div>
                        <div class="py-1">
                            {{ form_label(form.equipe, null, {
                                'label': 'Equipe'  
                            })  
                            }}
                            {{ form_widget(form.equipe, {
                                'attr': {'class': 'text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-grey shadow-md focus:bg-white focus:border-grey focus:outline-none'}    
                            })   
                            }}
                        </div>
                        <div class="py-3">
			                <div class="flex items-center justify-center">
				            <label class="flex flex-col items-center bg-blue text-white rounded-lg tracking-wide uppercase border border-blue cursor-pointer hover:bg-blue hover:text-white p-3">
					        <svg width="50" height="50" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20">
						        <path d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h2l-4-4-4 4h3v3h2v-3z"/>
					        </svg>
					        <span class="mt-2 text-sm">Selectionner un fichier</span>
					        {{ form_widget(form.imageFile, {
                            'attr': {'class': 'hidden'}    
                            })   }}
				            </label>
                        </div>
                         <div class="flex flex-col justify-center items-center">
                            <a href="{{ path('edit_password') }}" type="button"
                                    class="border border-blue text-blue rounded-md px-4 py-2 mt-4 transition duration-500 ease select-none hover:text-white hover:bg-blue focus:outline-none focus:shadow-outline">
                                    Modifier mon mot de passe
                            </a>

                            <button class="border border-blue text-blue rounded-md px-4 py-2 mt-4 transition duration-500 ease select-none hover:text-white hover:bg-blue focus:outline-none focus:shadow-outline">Enregistrer les modifications</button>
                         </div>   
                            </div>
                        {{ form_end(form)}}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
