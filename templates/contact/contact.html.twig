{% extends 'base.html.twig' %}

{% block title %}Carnet de contacts
{% endblock %}

{% block body %}

	{% for messages in app.flashes %}
		{% for message in messages %}
			{{ message }}
		{% endfor %}
	{% endfor %}

<h1>Carnet de contacts</h1>

	<table class="table table-hover">
		<thead class="m-auto">
			<th>Nom</th>
			<th>Prénom</th>
			<th>Statut</th>
			<th>Entreprise</th>
			<th>Email</th>
			<th>Numéro de téléphone</th>
			<th>Actions</th>
		</thead>
		<tbody>
			{# Loop on users #}
			{% for contact in contacts %}
				<tr class="table-{{ cycle(['active','default'], loop.index0) }}">
					<th scope="row">{{ contact.nom }}</th>
					<td>{{ contact.prenom }}</td>
					<td>{{ contact.statut }}</td>
					<td>{{ contact.entreprise }}</td>
					<td>{{ contact.email }}</td>
					<td>{{ contact.tel }}</td>
					<td>
						<a href="{{ path('contact_edit', {'id': contact.id}) }}" class="btn btn-primary">Modifier</a>
						<a href="{{ path('contact_show', {'id': contact.id}) }}" class="btn btn-danger">Supprimer</a>
					</td>
				</tr>


			{% else %}
				<tr>
					<td colspan="5">Vous n'avez pas de contact enregistré.</td>
				</tr>

			{% endfor %}

		</tbody>
	</table>
	<a href="{{ path('contact_add') }}" class="btn btn-success">Ajouter un contact</a>
{% endblock %}
