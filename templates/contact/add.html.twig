{% extends 'base.html.twig' %}

{% block title %}Ajouter un contact
{% endblock %}

{% block body %}

	{{ form_start(form) }}
	<fieldset>
		<legend>Ajouter un contact au carnet</legend>
		<div class="form-group row">
			{{ form_label(form.nom) }}
			<div class="col-sm-10">
				{{ form_widget(form.nom)}}
			</div>
		</div>
		<div class="form-group row">
			{{ form_label(form.prenom) }}
			<div class="col-sm-10">
				{{ form_widget(form.prenom)}}
			</div>
		</div>
		<div class="form-group row">
			{{ form_label(form.statut) }}
			<div class="col-sm-10">
				{{ form_widget(form.statut)}}
			</div>
		</div>

		<div class="form-group row">
			{{ form_label(form.entreprise) }}
			<div class="col-sm-10">
				{{ form_widget(form.entreprise)}}
			</div>
		</div>

		<div class="form-group row">
			{{ form_label(form.email) }}
			<div class="col-sm-10">
				{{ form_widget(form.email)}}
			</div>
		</div>

		<div class="form-group row">
			{{ form_label(form.tel) }}
			<div class="col-sm-10">
				{{ form_widget(form.tel)}}
			</div>
		</div>

		<button type="submit" class="btn btn-primary">Ajouter</button>
	</fieldset>
	{{ form_end(form) }}
</div>{% endblock %}
