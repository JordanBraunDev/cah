{% extends 'base.html.twig' %}

{% block title %}Modifier un contact{% endblock %}

{% block body %}

    <h2>Modifier un profil</h2>

        {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
            {{ form_row(form.email) }}
            {{ form_row(form.entreprise) }}
            {{ form_row(form.tel) }}

            <button class="btn btn-success">Modifier</button>
        {{ form_end(form)}}


{% endblock %}
