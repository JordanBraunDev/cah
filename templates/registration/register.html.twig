{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="container max-w-full mx-auto md:py-24 px-6">
  <div class="max-w-sm mx-auto px-6">
        <div class="relative flex flex-wrap">
            <div class="w-full relative">
                <div class="md:mt-6">
                    <div class="text-center font-semibold text-black">
                        Créer un compte
                    </div>
                    <div class="text-center font-base text-black">
                        Déjà inscrit ? <a href="{{ path('login') }}">Connectez-vous !</a>
                    </div>
                    {{ form_start(registrationForm, {
                        'attr': {'class': "mt-8"}
                    }) }}
                        <div class="mx-auto max-w-lg ">
                            <div class="py-1">
                                {{ form_label(registrationForm.nom, null, {
                                    'label': 'Nom'  
                                })  
                                }}
                                {{ form_widget(registrationForm.nom, {
                                    'attr': {'class': 'text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-grey shadow-md focus:bg-white focus:border-grey focus:outline-none'}    
                                })   
                                }}
                            </div>
                            <div class="py-1">
                                {{ form_label(registrationForm.prenom, null, {
                                    'label': 'Prénom'  
                                })  
                                }}
                                {{ form_widget(registrationForm.prenom, {
                                    'attr': {'class': 'text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-grey shadow-m focus:bg-white focus:border-grey focus:outline-none'}    
                                })   
                                }}
                                 {{ form_errors(registrationForm.prenom) }}
                            </div>
                            <div class="py-1">
                                {{ form_label(registrationForm.pseudo, null, {
                                    'label': 'Pseudo'  
                                })  
                                }}
                                {{ form_widget(registrationForm.pseudo, {
                                    'attr': {'class': 'text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-grey shadow-m focus:bg-white focus:border-grey focus:outline-none'}    
                                })   
                                }}
                            </div>
                            <div class="py-1">
                                {{ form_label(registrationForm.email, null, {
                                    'label': 'Email'  
                                })  
                                }}
                                {{ form_widget(registrationForm.email, {
                                    'attr': {'class': 'text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 shadow-md focus:bg-white focus:border-gray-600 focus:outline-none'}    
                                })   
                                }}
                            </div>
                            <div class="py-1">
                                {{ form_label(registrationForm.plainPassword, null, {
                                    'label': 'Mot de passe'  
                                })  
                                }}
                                {{ form_widget(registrationForm.plainPassword.first, {
                                    'attr': {'class': 'text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 shadow-md focus:bg-white focus:border-gray-600 focus:outline-none'}    
                                })   
                                }}
                                 {{ form_errors(registrationForm.plainPassword.first) }}
                            </div>
                            <div class="py-1">
                                {{ form_label(registrationForm.plainPassword, null, {
                                    'label': 'Répétez le mot de passe'  
                                })  
                                }}
                                {{ form_widget(registrationForm.plainPassword.second, {
                                    'attr': {'class': 'text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 shadow-md focus:bg-white focus:border-gray-600 focus:outline-none'}    
                                })   
                                }}
                                 {{ form_errors(registrationForm.plainPassword.second) }}
                            </div>
                            
                          
                            <button class="mt-3 text-lg font-semibold
                                            bg-gray-800 w-full text-white rounded-lg
                                            px-6 py-3 block shadow-xl hover:text-white hover:bg-black">
                                Inscription
                            </button>
                        </div>
                    {{ form_end(registrationForm) }}

                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}